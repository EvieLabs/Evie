{
  "name": "evie-bot",
  "version": "1.1.2",
  "description": "Evie is a feature-rich, easy to use Discord bot built to deliver the best experience of a bot on Discord!",
  "main": "dist/index.js",
  "imports": {
    "#root/*": "./dist/*.js",
    "#types/*": "./dist/types/*.js",
    "#utils/*": "./dist/utils/*.js",
    "#constants/*": "./dist/constants/*.js",
    "#classes/*": "./dist/classes/*.js"
  },
  "_moduleAliases": {
    "@evie/reacord": "dist/lib/reacord/library/main.js",
    "@evie/fetch": "dist/lib/fetch/fetch.js",
    "@evie/valorant": "dist/lib/valorant/index.js",
    "@evie/config": "dist/lib/config/index.js",
    "@evie/shapers": "dist/lib/shapers/index.js",
    "@evie/home": "dist/lib/home/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "lint-staged": {
    "apps/bot/src/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "dev": "yarn clean && tsc-watch -p src --onSuccess \"node .\"",
    "start": "node dist/index.js",
    "start:withdbupdate": "yarn pushdb:force && node dist/index.js",
    "build": "yarn prisma generate && tsc -p src",
    "pushdb": "yarn prisma db push",
    "pushdb:force": "yarn prisma db push --accept-data-loss",
    "lint": "eslint --fix --ext ts src",
    "clean": "rimraf dist"
  },
  "keywords": [],
  "author": "Tristan Camejo <contact@tristancamejo.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@discordjs/builders": "^0.12.0",
    "@discordjs/rest": "^0.3.0",
    "@influxdata/influxdb-client": "^1.26.0",
    "@prisma/client": "latest",
    "@sapphire/decorators": "^4.3.5",
    "@sapphire/framework": "next",
    "@sapphire/plugin-api": "^3.2.1",
    "@sapphire/plugin-hmr": "^1.2.0",
    "@sapphire/plugin-i18next": "next",
    "@sapphire/plugin-logger": "^2.2.1",
    "@sentry/integrations": "^6.19.7",
    "@sentry/node": "^6.19.7",
    "@sentry/tracing": "^6.19.7",
    "@swc/core": "^1.2.198",
    "axios": "^0.26.1",
    "bufferutil": "^4.0.6",
    "canvas": "^2.9.1",
    "discord.js": "^13.8.0",
    "dotenv": "^10.0.0",
    "glob": "^7.2.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "nanoid": "^3.3.4",
    "node-cron": "^3.0.1",
    "pm2": "^5.2.0",
    "react": "^18.0.0",
    "react-reconciler": "^0.27.0",
    "rxjs": "^7.5.5",
    "strongly-typed-events": "^2.1.16",
    "tslib": "^2.4.0",
    "undici": "^5.4.0",
    "utf-8-validate": "^5.0.9",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@sapphire/eslint-config": "^4.3.6",
    "@sapphire/ts-config": "^3.3.4",
    "@types/lodash": "^4",
    "@types/module-alias": "^2",
    "@types/node": "^17.0.21",
    "@types/node-cron": "^3.0.1",
    "@types/react": "^18",
    "@types/react-reconciler": "^0",
    "@types/rimraf": "^3",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "babel-eslint": "^10.1.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "prettier": "^2.6.2",
    "prisma": "latest",
    "rimraf": "^3.0.2",
    "tsc-watch": "^5.0.3",
    "type-fest": "^2.13.0",
    "typescript": "^4.7.3"
  },
  "packageManager": "yarn@3.2.0"
}
