{
  "name": "@evie/evie",
  "version": "2.0.0",
  "description": "Evie is a feature-rich, easy to use Discord bot built to deliver the best experience of a bot on Discord!",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "build": "cd services/bot && yarn build && cd ../api && yarn build && cd ../../",
    "pushdb": "yarn prisma db push",
    "pushdb:force": "yarn prisma db push --accept-data-loss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "lint-staged": {
    "apps/bot/src/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [],
  "author": "Tristan Camejo <contact@tristancamejo.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@prisma/client": "^4.0.0"
  },
  "devDependencies": {
    "@sapphire/eslint-config": "^4.3.7",
    "@sapphire/ts-config": "^3.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "babel-eslint": "^10.1.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "prettier": "^2.7.1",
    "prisma": "^3.15.2",
    "rimraf": "^3.0.2",
    "tsc-watch": "^5.0.3",
    "type-fest": "2.13.0",
    "typescript": "^4.7.4"
  }
}
