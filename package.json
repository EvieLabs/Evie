{
  "name": "evie-bot",
  "version": "1.0.0",
  "description": "Evie is a feature-rich, easy to use Discord bot built to deliver the best experience of a bot on Discord!",
  "main": "dist/index.js",
  "imports": {
    "#root/*": "./dist/*.js",
    "#types/*": "./dist/types/*.js",
    "#utils/*": "./dist/utils/*.js",
    "#constants/*": "./dist/constants/*.js",
    "#classes/*": "./dist/classes/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "lint-staged": {
    "apps/bot/src/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "dev": "tsup --watch --onSuccess \"yarn start\"",
    "start": " node dist/index.js",
    "build": "yarn prisma generate && tsup",
    "pushdb": "yarn prisma db push",
    "docker": "yarn prisma db push && pm2-runtime start ./dist/index.js",
    "lint": "eslint --fix --ext ts src",
    "compose": "docker-compose up --env-file ./apps/bot/.env --build"
  },
  "keywords": [],
  "author": "Tristan Camejo <contact@tristancamejo.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@discordjs/builders": "^0.12.0",
    "@discordjs/rest": "^0.3.0",
    "@prisma/client": "^3.11.0",
    "@sapphire/decorators": "^4.2.5",
    "@sapphire/framework": "next",
    "@sapphire/plugin-api": "^3.2.1",
    "@sapphire/plugin-hmr": "^1.2.0",
    "@sapphire/plugin-logger": "^2.1.3",
    "@sentry/integrations": "^6.19.3",
    "@sentry/node": "^6.19.3",
    "@sentry/tracing": "^6.19.3",
    "@swc/core": "^1.2.150",
    "axios": "^0.26.0",
    "bad-words": "^3.0.4",
    "bufferutil": "^4.0.6",
    "canvas": "^2.9.1",
    "discord.js": "github:monbrey/discord.js#modals",
    "dotenv": "^10.0.0",
    "glob": "^7.2.0",
    "node-fetch": "2.6.1",
    "pidusage": "^3.0.0",
    "pm2": "^5.2.0",
    "pug": "^3.0.2",
    "strongly-typed-events": "^2.1.16",
    "utf-8-validate": "^5.0.9",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@sapphire/eslint-config": "^4.3.0",
    "@sapphire/ts-config": "^3.3.2",
    "@types/bad-words": "^3.0.1",
    "@types/node": "^17.0.21",
    "@types/pidusage": "^2.0.2",
    "@types/pug": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.18.0",
    "babel-eslint": "^10.1.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "prisma": "^3.11.0",
    "tsup": "5.12.1",
    "typescript": "^4.6.3"
  },
  "packageManager": "yarn@3.2.0"
}
