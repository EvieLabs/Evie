{
  "name": "evie-bot",
  "version": "1.0.0",
  "description": "Evie is a feature-rich, easy to use Discord bot built to deliver the best experience of a bot on Discord!",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsup --watch --onSuccess \"yarn start\"",
    "start": "yarn preflight && node --enable-source-maps dist/index.mjs",
    "preflight": "node ./scripts/preflight.js && yarn lint:fix",
    "build": "yarn prisma generate && yarn preflight && tsup",
    "docker": "cd ./dist/ && pm2-runtime start index.mjs",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [],
  "author": "Tristan Camejo <contact@tristancamejo.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@discordjs/builders": "^0.12.0",
    "@discordjs/rest": "^0.3.0",
    "@prisma/client": "^3.10.0",
    "@sapphire/discord.js-utilities": "^4.8.2",
    "@sapphire/framework": "next",
    "@sapphire/plugin-logger": "^2.1.3",
    "@swc/core": "^1.2.150",
    "axios": "^0.26.0",
    "discord-modals": "^1.2.4",
    "discord.js": "^13.6.0",
    "dotenv": "^10.0.0",
    "firebase-admin": "^10.0.2",
    "glob": "^7.2.0",
    "hypixel-api-reborn": "^9.0.3",
    "imgur": "^1.0.2",
    "leo-profanity": "^1.5.0",
    "minecraft-server-util": "^3.6.1",
    "ms": "^2.1.3",
    "node-fetch": "2.6.1",
    "pm2": "^5.2.0",
    "systeminformation": "^5.9.7",
    "top.gg": "^2.3.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "eslint": "7.32.0",
    "prisma": "^3.10.0",
    "tsup": "^5.11.13",
    "typescript": "^4.5.5"
  }
}
