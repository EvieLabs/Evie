{
	"name": "@evie/bot",
	"description": "Bot client for Evie",
	"version": "0.0.0",
	"main": "dist/index.js",
	"private": true,
	"type": "module",
	"imports": {
		"#root/*": "./dist/*.js",
		"#types/*": "./dist/types/*.js",
		"#utils/*": "./dist/utils/*.js",
		"#constants/*": "./dist/constants/*.js",
		"#classes/*": "./dist/classes/*.js",
		"@evie/reacord": "./dist/lib/reacord/library/main.js",
		"@evie/valorant": "./dist/lib/valorant/index.js",
		"@evie/config": "./dist/lib/config/index.js",
		"@evie/shapers": "./dist/lib/shapers/index.js",
		"@evie/home": "./dist/lib/home/index.js",
		"@astral/utils": "./dist/lib/astral/utils/index.js",
		"@evie/internal": "./dist/lib/internal/index.js",
		"@evie/grpc": "./dist/lib/grpc/index.js"
	},
	"scripts": {
		"dev": "yarn clean && envject -- tsup --watch --onSuccess \"cp -a src/languages dist && node .\"",
		"start": "node dist/index.js",
		"build": "yarn clean && prisma generate && tsup && cp -a src/languages dist",
		"lint": "eslint --fix --ext ts src",
		"format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
		"pushdb": "yarn prisma db push",
		"pushdb:force": "yarn prisma db push --accept-data-loss",
		"clean": "rimraf dist"
	},
	"keywords": [],
	"author": "Tristan Camejo <contact@tristancamejo.com>",
	"license": "Apache-2.0",
	"dependencies": {
		"@discordjs/builders": "^0.15.0",
		"@discordjs/rest": "^0.5.0",
		"@evie/pubsub": "workspace:^",
		"@evie/sentry": "workspace:^",
		"@influxdata/influxdb-client": "^1.27.0",
		"@prisma/client": "^4.6.1",
		"@sapphire/decorators": "^4.3.8",
		"@sapphire/fetch": "^2.4.1",
		"@sapphire/framework": "next",
		"@sapphire/plugin-i18next": "^2.5.4",
		"@sapphire/plugin-logger": "^2.2.3",
		"@sapphire/shapeshift": "^3.5.1",
		"@sentry/integrations": "^6.19.7",
		"@sentry/node": "^6.19.7",
		"@sentry/tracing": "^6.19.7",
		"@teamevie/env": "workspace:^",
		"axios": "^0.27.2",
		"bufferutil": "^4.0.6",
		"cardinal": "^2.1.1",
		"discord-api-types": "0.33.3",
		"discord.js": "^13.8.1",
		"dotenv": "^16.0.1",
		"glob": "^8.0.3",
		"lodash": "^4.17.21",
		"node-cron": "^3.0.1",
		"openai": "^3.0.0",
		"react": "^18.0.0",
		"react-reconciler": "^0.29.0",
		"rxjs": "^7.5.5",
		"tslib": "^2.4.0",
		"undici": "^5.9.1",
		"utf-8-validate": "^5.0.9",
		"uuid": "8.3.2",
		"ws": "^8.8.1",
		"zlib-sync": "^0.1.7",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@types/lodash": "^4",
		"@types/node": "^18.0.6",
		"@types/node-cron": "^3.0.2",
		"@types/react": "^18",
		"@types/react-reconciler": "^0",
		"@types/rimraf": "^3",
		"@types/ws": "^8.5.3",
		"eslint": "7.32.0",
		"eslint-config-custom": "workspace:^",
		"prisma": "^4.6.1",
		"rimraf": "^3.0.2",
		"tsc-watch": "^5.0.3",
		"tsconfig": "workspace:^",
		"type-fest": "3.2.0"
	}
}
