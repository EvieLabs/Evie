{
  "name": "evie-bot",
  "version": "1.0.0",
  "description": "Evie is a feature-rich, easy to use Discord bot built to deliver the best experience of a bot on Discord!",
  "main": "dist/index.js",
  "imports": {
    "#root/*": "./dist/*.js",
    "#types/*": "./dist/types/*.js",
    "#utils/*": "./dist/utils/*.js",
    "#constants/*": "./dist/constants/*.js",
    "#classes/*": "./dist/classes/*.js"
  },
  "scripts": {
    "dev": "tsup --watch --onSuccess \"yarn start\"",
    "start": "yarn preflight && node dist/index.js",
    "preflight": "node ./scripts/preflight.js",
    "build": "yarn prisma generate && yarn preflight && tsup",
    "docker": "cd ./dist/ && pm2-runtime start index.js",
    "lint": "eslint --fix --ext ts src"
  },
  "keywords": [],
  "author": "Tristan Camejo <contact@tristancamejo.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@discordjs/builders": "^0.12.0",
    "@discordjs/rest": "^0.3.0",
    "@prisma/client": "^3.10.0",
    "@sapphire/decorators": "^4.2.5",
    "@sapphire/framework": "next",
    "@sapphire/plugin-hmr": "^1.2.0",
    "@sapphire/plugin-logger": "^2.1.3",
    "@swc/core": "^1.2.150",
    "@tictactrip/axios-redis": "^2.0.0",
    "axios": "^0.26.0",
    "bad-words": "^3.0.4",
    "discord.js": "github:monbrey/discord.js#modals",
    "dotenv": "^10.0.0",
    "firebase-admin": "^10.0.2",
    "glob": "^7.2.0",
    "hypixel-api-reborn": "^9.0.3",
    "imgur": "^1.0.2",
    "ioredis": "^4.28.5",
    "leo-profanity": "^1.5.0",
    "minecraft-server-util": "^3.6.1",
    "ms": "^2.1.3",
    "node-fetch": "2.6.7",
    "pm2": "^5.2.0",
    "systeminformation": "^5.9.7",
    "top.gg": "^2.3.2"
  },
  "devDependencies": {
    "@sapphire/eslint-config": "^4.3.0",
    "@sapphire/ts-config": "^3.3.2",
    "@types/bad-words": "^3.0.1",
    "@types/ioredis": "^4.28.8",
    "@types/ms": "^0.7.31",
    "@types/node": "^17.0.21",
    "babel-eslint": "^10.1.0",
    "eslint": "7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prisma": "^3.10.0",
    "tsup": "^5.12.0",
    "typescript": "^4.5.5"
  }
}
