{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "paths": {
      "#root/*": ["*"],
      "#types/*": ["types/*"],
      "#utils/*": ["utils/*"],
      "#classes/*": ["classes/*"],
      "#constants/*": ["constants/*"],
      "@evie/reacord": ["lib/reacord/library/main.ts"]
    }
  },
  "include": ["."]
}
